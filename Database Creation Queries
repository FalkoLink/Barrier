CREATE TABLE roles (
    id SERIAL PRIMARY KEY,
    name VARCHAR(50) UNIQUE NOT NULL,
	info TEXT,
	timestamp TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE users (
    id SERIAL PRIMARY KEY,
    first_name VARCHAR(100) NOT NULL,
	last_name VARCHAR(100) NOT NULL,
    phone VARCHAR(17) UNIQUE NOT NULL,
	email VARCHAR(100) UNIQUE,
    password VARCHAR(100) NOT NULL,
    expired BOOLEAN DEFAULT FALSE,
    role_id INTEGER REFERENCES roles(id),
	timestamp TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE addresses (
    id SERIAL PRIMARY KEY,
	region VARCHAR(50),
    city VARCHAR(50),
    address VARCHAR(100),
	timestamp TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE connections (
    id SERIAL PRIMARY KEY,
    name VARCHAR(100) NOT NULL,
    info TEXT,
	timestamp TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE barriers (
    id SERIAL PRIMARY KEY,
    name VARCHAR(100) NOT NULL,
    address_id INTEGER REFERENCES addresses(id),
	connection_id INTEGER REFERENCES addresses(id),
	timestamp TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE tariffs (
    id SERIAL PRIMARY KEY,
    name VARCHAR(50),
    price DECIMAL(10, 2) NOT NULL,
    duration_in_days INTEGER NOT NULL, -- например: 30 для месяца
	timestamp TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE payments (
    id SERIAL PRIMARY KEY,
    user_id INTEGER REFERENCES users(id),
    tariff_id INTEGER REFERENCES tariffs(id),
    start_date DATE NOT NULL,
    end_date DATE NOT NULL,
	timestamp TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE users_barriers (
    user_id INTEGER REFERENCES users(id),
    barrier_id INTEGER REFERENCES barriers(id),
    PRIMARY KEY (user_id, barrier_id),
	timestamp TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE logs (
    id SERIAL PRIMARY KEY,
    user_id INTEGER REFERENCES users(id),
    barrier_id INTEGER REFERENCES barriers(id),
    action VARCHAR(10) CHECK (action IN ('OPEN', 'CLOSE')),
    timestamp TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);
